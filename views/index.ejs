<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof branding !== 'undefined' ? branding.title : 'Pathfinder' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background-color: var(--bs-dark);
            color: var(--bs-light);
        }
        [data-bs-theme="light"] body {
            background-color: var(--bs-light);
            color: var(--bs-dark);
        }
        .menu-item {
            padding: 1rem;
            margin-bottom: 0.5rem;
            border-radius: 0.375rem;
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            cursor: pointer;
        }
        [data-bs-theme="light"] .menu-item {
            background-color: var(--bs-light);
            border: 1px solid var(--bs-border-color);
        }
        .menu-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        [data-bs-theme="light"] .menu-item:hover {
            background-color: var(--bs-primary);
            color: white;
        }
        .menu-item-description {
            font-size: 0.875rem;
            color: var(--bs-secondary);
            margin-top: 0.25rem;
        }
        [data-bs-theme="light"] .menu-item-description {
            color: var(--bs-secondary);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <strong><%= typeof branding !== 'undefined' ? branding.title : 'Pathfinder' %></strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-theme-toggle>
                            <span class="theme-toggle-text">Light Mode</span>
                        </button>
                    </li>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <li class="nav-item dropdown ms-2">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <%= user.email %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/account-settings">Account Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button class="dropdown-item" type="button" data-theme-toggle>
                                        <span class="theme-toggle-text">Light Mode</span>
                                    </button>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <% if (user.isAdmin && typeof adminPanelUrl !== 'undefined' && adminPanelUrl) { %>
                                    <li><a class="dropdown-item" href="<%= adminPanelUrl %>">Admin Panel</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                <% } %>
                                <li>
                                    <form method="POST" action="/logout">
                                        <button type="submit" class="dropdown-item">Log Out</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    <% } else if (typeof authEnabled !== 'undefined' && authEnabled) { %>
                        <li class="nav-item ms-2">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <% if (typeof branding !== 'undefined' && branding.subtitle) { %>
            <p class="text-muted mb-4"><%= branding.subtitle %></p>
        <% } %>

        <div class="list-group">
            <% if (typeof menuTree !== 'undefined' && menuTree.length > 0) { %>
                <% menuTree.forEach(item => { %>
                    <div class="menu-item list-group-item-action" 
                         data-item-id="<%= item.id %>"
                         data-item-type="<%= item.type %>"
                         data-item-url="<%= item.url || '' %>"
                         data-item-password="<%= item.password || '' %>"
                         data-item-disclaimer="<%= item.disclaimer || '' %>">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <h5 class="mb-1"><%= item.name %></h5>
                                <% if (item.description) { %>
                                    <p class="menu-item-description mb-0"><%= item.description %></p>
                                <% } %>
                            </div>
                            <% if (item.type === 'submenu') { %>
                                <i class="bi bi-chevron-right ms-2"></i>
                            <% } else { %>
                                <i class="bi bi-box-arrow-up-right ms-2"></i>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-info">
                    <p>No menu items configured. <% if (typeof authEnabled !== 'undefined' && authEnabled) { %>Please add items through the admin panel.<% } else { %>Please configure menu items in config.toml.<% } %></p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Password Modal -->
    <div class="modal fade" id="passwordModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Password Required</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>This link is protected by a password.</p>
                    <div class="mb-3">
                        <label for="linkPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="linkPassword" placeholder="Enter password">
                    </div>
                    <div class="alert alert-danger d-none" id="passwordError"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="submitPassword">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Disclaimer Modal -->
    <div class="modal fade" id="disclaimerModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Disclaimer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="disclaimerText"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="acceptDisclaimer">I Understand</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/theme.js"></script>
    <script>
        let pendingAction = null;
        const passwordModal = new bootstrap.Modal(document.getElementById('passwordModal'));
        const disclaimerModal = new bootstrap.Modal(document.getElementById('disclaimerModal'));

        function handleItemClick(item) {
            const type = item.dataset.itemType;
            const url = item.dataset.itemUrl;
            const password = item.dataset.itemPassword;
            const disclaimer = item.dataset.itemDisclaimer;
            const itemId = item.dataset.itemId;

            pendingAction = () => {
                if (type === 'submenu') {
                    window.location.href = `/submenu/${itemId}`;
                } else if (url) {
                    // Check for password first
                    if (password) {
                        passwordModal.show();
                        document.getElementById('linkPassword').value = '';
                        document.getElementById('passwordError').classList.add('d-none');
                        document.getElementById('submitPassword').onclick = () => {
                            const enteredPassword = document.getElementById('linkPassword').value;
                            if (enteredPassword === password) {
                                passwordModal.hide();
                                // Then check for disclaimer
                                if (disclaimer) {
                                    document.getElementById('disclaimerText').textContent = disclaimer;
                                    disclaimerModal.show();
                                    document.getElementById('acceptDisclaimer').onclick = () => {
                                        disclaimerModal.hide();
                                        window.open(url, '_blank');
                                    };
                                } else {
                                    window.open(url, '_blank');
                                }
                            } else {
                                document.getElementById('passwordError').textContent = 'Incorrect password';
                                document.getElementById('passwordError').classList.remove('d-none');
                            }
                        };
                    } else if (disclaimer) {
                        // Only disclaimer, no password
                        document.getElementById('disclaimerText').textContent = disclaimer;
                        disclaimerModal.show();
                        document.getElementById('acceptDisclaimer').onclick = () => {
                            disclaimerModal.hide();
                            window.open(url, '_blank');
                        };
                    } else {
                        // No password or disclaimer
                        window.open(url, '_blank');
                    }
                }
            };

            // Start the flow
            pendingAction();
        }

        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', () => handleItemClick(item));
        });

        // Handle Enter key in password modal
        document.getElementById('linkPassword')?.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                document.getElementById('submitPassword').click();
            }
        });
    </script>
</body>
</html>
